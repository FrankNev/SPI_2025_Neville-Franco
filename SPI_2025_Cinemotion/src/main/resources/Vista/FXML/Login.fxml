<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400" prefWidth="600" style="-fx-background-color: #1c2e48;" stylesheets="@../Recursos/estilos.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlador.ControladorLogin">
    <children>
        <HBox alignment="CENTER" layoutX="217.0" layoutY="20.0" spacing="10">
            <ImageView fx:id="iconoCinemotion" fitHeight="30" fitWidth="30" />
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="242.0" layoutY="26.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="CINEMOTION" textAlignment="CENTER" textFill="WHITE">
            </Label>
        </HBox>
        <VBox alignment="CENTER" layoutX="20.0" layoutY="40.0" prefHeight="320.0" prefWidth="560.0" spacing="10" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="40.0">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Inicio de Sesión" textFill="WHITE" />
            <HBox alignment="CENTER" spacing="30.0">
                <Label text="Usuario:" textFill="WHITE" />
                <TextField fx:id="txtUsuario" prefHeight="26.0" prefWidth="225.0" promptText="Ingrese su usuario" />
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Label text="Contraseña:" textFill="WHITE" />
                <PasswordField fx:id="txtContraseña" prefHeight="26.0" prefWidth="225.0" promptText="Ingrese su contraseña" />
            </HBox>

            <Button alignment="CENTER" contentDisplay="CENTER" onAction="#iniciarSesion" prefWidth="150.0" text="Ingresar" />

            <Label fx:id="lblMensaje" />
            
            <HBox alignment="CENTER" spacing="5">
                <Label text="¿Todavía no te registraste?" textFill="WHITE" />
                <Hyperlink onAction="#abrirRegistro" text="Registrate aquí" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
