<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400" prefWidth="600" style="-fx-background-color: #1c2e48;" stylesheets="@../Recursos/estilos.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlador.ControladorRegistro">
    <children>
        <HBox alignment="CENTER" layoutX="217.0" layoutY="20.0" spacing="10">
            <ImageView fx:id="iconoCinemotion" fitHeight="30" fitWidth="30" />
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="242.0" layoutY="26.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="CINEMOTION" textAlignment="CENTER" textFill="WHITE">
            </Label>
        </HBox>
        <VBox alignment="TOP_LEFT" layoutX="50.0" layoutY="60.0" prefHeight="300.0" prefWidth="500.0" spacing="5">

            <Label alignment="CENTER" maxWidth="Infinity" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Registro de Usuario" textFill="WHITE" />

            <Label style="-fx-font-size: 12px; -fx-text-fill: WHITE;" text="Ingrese un nombre de Usuario" />
            <TextField fx:id="txtUsuario" prefHeight="26.0" prefWidth="206.0" />
            <Label style="-fx-font-size: 11px; -fx-text-fill: gray;" text="Mínimo 4 caracteres" />
            
            <Label style="-fx-font-size: 12px; -fx-text-fill: WHITE;" text="Ingrese una contraseña" />
            <PasswordField fx:id="txtContraseña" prefWidth="250" />
            <Label style="-fx-font-size: 11px; -fx-text-fill: gray;" text="Mínimo 6 caracteres" />
            
            <Label style="-fx-font-size: 12px; -fx-text-fill: WHITE;" text="Confirme su contraseña" />
            <PasswordField fx:id="txtConfirmarContraseña" prefWidth="250" />

            <HBox alignment="CENTER" spacing="5">  
                <Button alignment="CENTER" maxWidth="150" onAction="#registrarUsuario" prefWidth="150" text="Registrarse">
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
                </Button>
            </HBox>
            
            <HBox alignment="CENTER">
                <Label text="¿Ya tenés una cuenta?" textFill="WHITE" />
                <Hyperlink onAction="#irALogin" text="Iniciar Sesión" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
