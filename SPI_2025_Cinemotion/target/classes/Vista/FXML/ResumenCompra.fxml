<StackPane maxHeight="400.0" maxWidth="600.0" prefHeight="400" prefWidth="500" style="-fx-background-color: #1c2e48;" stylesheets="@../Recursos/estilos.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlador.ControladorCompra">

    <VBox alignment="CENTER" spacing="20.0" fillWidth="false" prefWidth="320.0" StackPane.alignment="CENTER">

        <VBox alignment="TOP_CENTER" prefHeight="250.0" prefWidth="250.0" spacing="10.0" style="-fx-background-color: #284062;">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="Resumen de Compra">
             <VBox.margin>
                <Insets top="5.0" />
             </VBox.margin></Label>

            <GridPane hgap="10" vgap="10">
                <Label text="PelÃ­cula:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label fx:id="lblTitulo" GridPane.columnIndex="1" GridPane.rowIndex="0" wrapText="true"  />

                <Label text="Fecha:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Label fx:id="lblFecha" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Formato:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <Label fx:id="lblFormato" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Horario:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <Label fx:id="lblHorario" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Cantidad de entradas:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <Label fx:id="lblCantidad" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Precio por entrada:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <Label fx:id="lblSubtotal" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Label text="Total a pagar:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <Label fx:id="lblTotal" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="6" />
             <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
             </columnConstraints>
             <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
             </rowConstraints>
             <padding>
                <Insets left="5.0" right="5.0" />
             </padding>
            </GridPane>

        </VBox>

         <HBox alignment="CENTER" prefWidth="250.0" spacing="20.0">
             <Button onAction="#cancelarCompra" prefWidth="150" style="-fx-background-color: #bdc3c7;" text="Cancelar Compra" />
             <Button onAction="#confirmarCompra" prefWidth="150" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Confirmar Compra" />
         </HBox>

    </VBox>

</StackPane>
