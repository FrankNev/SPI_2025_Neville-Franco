<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="1000" stylesheets="@../Recursos/estilos.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlador.ControladorFunciones">

    <left>
        <VBox alignment="TOP_CENTER" minWidth="200" spacing="20" style="-fx-background-color: #284062; -fx-padding: 20;">
            <HBox alignment="CENTER" layoutX="200.0" layoutY="20.0" maxWidth="160.0" prefHeight="30.0" prefWidth="160.0" spacing="5">
                <ImageView fx:id="iconoCinemotion" fitHeight="30" fitWidth="30" />
                <Label alignment="CENTER" contentDisplay="CENTER" layoutX="242.0" layoutY="26.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="CINEMOTION" textAlignment="CENTER" textFill="WHITE">
                </Label>
                <VBox.margin>
                    <Insets />
                </VBox.margin>
            </HBox>
            <Button maxWidth="150" onAction="#volverACartelera" text="Volver" />
            <Pane VBox.vgrow="ALWAYS" />
            <Button maxWidth="150" onAction="#cerrarSesion" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Cerrar SesiÃ³n" />
        </VBox>
    </left>

    <center>
        <HBox alignment="TOP_LEFT" spacing="30" style="-fx-padding: 20; -fx-background-color: #1c2e48;">
            <VBox alignment="TOP_CENTER" spacing="10">
                <ImageView fx:id="imagenPelicula" fitHeight="300" fitWidth="200" preserveRatio="true" />
                <Label fx:id="lblTitulo" alignment="CENTER" maxWidth="200" style="-fx-font-size: 16px; -fx-font-weight: bold;" wrapText="true" />
                <Label fx:id="lblGenero" />
                <Label fx:id="lblDuracion" />
                <Label fx:id="lblDirector" />
                <Label fx:id="lblFechaEstreno" />
            </VBox>

            <VBox alignment="TOP_LEFT" prefWidth="500" spacing="15.0">
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="27.0" prefWidth="500.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Comprar Entradas" textAlignment="CENTER">
                </Label>

                <Label text="Seleccionar Fecha:" />
                <ComboBox fx:id="comboFechas" onAction="#cargarFormatos" />

                <Label text="Seleccionar Formato:" />
                <ComboBox fx:id="comboFormatos" onAction="#cargarHorarios" />

                <Label text="Seleccionar Horario:" />
                <ComboBox fx:id="comboHorarios" onAction="#actualizarEstadoHorario" />

                <Label fx:id="lblEstadoHorario" style="-fx-text-fill: green;" />

                <Label fx:id="lblPrecioEntrada" style="-fx-font-weight: bold;" />

                <Label text="Cantidad de entradas:" />
                <Spinner fx:id="spinnerCantidad" />

                <Button maxWidth="200" onAction="#irAResumenCompra" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Comprar entradas" />
            </VBox>

        </HBox>
    </center>
</BorderPane>
